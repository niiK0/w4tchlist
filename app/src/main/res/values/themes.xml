<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.W4tchList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pale_black</item>
        <item name="colorPrimaryVariant">@color/gold</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/pale_black</item>
        <item name="itemTextColor">@color/white</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="Theme.W4tchList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavbarHeader">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_grey</item>
    </style>

    <style name="Profile">
        <item name="colorPrimary">@color/pale_black</item>
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/darker_gold</item>
        <item name="colorTertiary">@color/gold</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="cardBackgroundColor">@color/light_grey</item>
        <item name="background">@color/light_grey</item>
        <item name="backgroundTint">@color/black</item>
        <item name="hintTextColor">@color/darker_gold</item>
        <item name="android:textColorHighlight">@color/darker_gold</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="MovieItem">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorTertiary">@color/gold</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="ListCreate">
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorOnPrimary">@color/pale_black</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textColor"> @color/white</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="ListCreateCB" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="GenreItem">
        <item name="colorPrimary">@color/white</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="Theme.W4tchList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="Theme.W4tchList.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
    </style>
</resources>